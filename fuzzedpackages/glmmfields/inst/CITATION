citEntry(
  entry = "article",
  title = "Black swans in space: modelling spatiotemporal processes with extremes",
  author = personList(
    as.person("Sean C. Anderson"),
    as.person("Eric J. Ward")
  ),
  year = "2018",
  journal = "Ecology",
  doi = "10.1002/ecy.2403",
  volume = "In press",
  textVersion =
    paste("Anderson, S. C., Ward, E. J. 2018. Black swans in space:",
      "modelling spatiotemporal processes with extremes. In press. Ecology.",
      "DOI: 10.1002/ecy.2403")
)
