vers <- paste("R package version", meta$Version)

citHeader("If using 'TBRDist' in your research, please cite Whidden and Matsen (2017).",
          "A citation to the R package (Smith 2019) would also be welcome.")

citEntry(entry = "Article",
         key = "Whidden2017",
         title = "Calculating the Unrooted Subtree-Prune-and-Regraft Distance.",
         author = personList(as.person("Chris Whidden"),
                             as.person("Frederick A. Matsen")),
         journal = "eprint at arXiv",
         year = 2017,
         arxiv = "1511.07529",

         textVersion = paste0("Whidden & Matsen (2017). Calculating the ",
                              "Unrooted Subtree Prune-and-Regraft Distance. ",
                              "arXiv:1511.07529"))

citEntry(entry = "Manual",
         key = "Smith2019",
         title = "TBRDist: Calculate Rearrangement Distances Between Unrooted Phylogenetic Trees",
         author = personList(as.person("Martin R. Smith")),
         note = vers,
         publisher = "Comprehensive R Archive Network",
         year = 2019,
         doi = "10.5281/zenodo.3548333",

         textVersion =
         paste0("Smith (2019). TBRDist: Calculate Rearrangement Distances ",
                "Between Unrooted Phylogenetic Trees. ", vers,
                ". Comprehensive R Archive Network. ",
                "doi: 10.5281/zenodo.3548333"))
