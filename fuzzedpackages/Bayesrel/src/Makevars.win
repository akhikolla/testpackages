
CXX_STD=CXX11
PKG_CFLAGS=-DNOSHORTS
PKG_CPPFLAGS=-ICsdp/include -DNOSHORTS -DARMA_NO_DEBUG=1
PKG_LIBS=-L./Csdp/lib -lsdp ${LAPACK_LIBS} ${BLAS_LIBS} ${FLIBS} -lm

$(SHLIB): Csdp.ts

Csdp.ts:
	cd Csdp/lib && $(MAKE) libsdp.a CC="$(CC)"  CFLAGS="-DDEFINE_FUNCTIONS_LAPACK_BLAS $(CLINK_CPPFLAGS) $(CFLAGS) $(CPICFLAGS) -DNOSHORTS -I../include" AR=$(AR) RANLIB=$(RANLIB) && touch $@
