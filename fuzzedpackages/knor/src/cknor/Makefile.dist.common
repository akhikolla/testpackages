CC = mpicc.mpich
CXX = mpicxx.mpich
#PROF=1
#RELEASE=1
CFLAGS = -g -O3 -fno-inline-functions -DSTATISTICS -DPROFILER $(LIB_PATHS)
CLANG_FLAGS = -Wno-attributes -Wno-unused-variable
OMP_FLAG = -fopenmp
LDFLAGS =  -lnuma -lpthread $(OMP_FLAG) \
		    -rdynamic -lrt -rdynamic
CXXFLAGS = -g -std=c++11 -O3 -I. -Wall -fPIC $(CLANG_FLAGS) \
		   -DSTATISTICS $(OMP_FLAG)
ifdef PROF
	LDFLAGS +=-lprofiler
	CXXFLAGS += -DPROFILER
endif
ifdef MEMTRACE
	CXXFLAGS += -DENABLE_MEM_TRACE
endif
ifdef RELEASE
	CXXFLAGS += -DNDEBUG
endif
CPPFLAGS := -MD

SOURCE := $(wildcard *.c) $(wildcard *.cpp)
OBJS := $(patsubst %.c,%.o,$(patsubst %.cpp,%.o,$(SOURCE)))
DEPS := $(patsubst %.o,%.d,$(OBJS))
MISSING_DEPS := $(filter-out $(wildcard $(DEPS)),$(DEPS))
MISSING_DEPS_SOURCES := $(wildcard $(patsubst %.d,%.c,$(MISSING_DEPS)) \
	$(patsubst %.d,%.cc,$(MISSING_DEPS)))
