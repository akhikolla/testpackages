citHeader("To cite the synlik package in publications use:")

citEntry(
         entry="Manual",
         title="An introduction to synlik (2014). R package version 0.1.0.",
         author=personList(
 	   as.person("Matteo Fasiolo"),
	   as.person("Simon Wood")
	   ),	   
	 year=2014,
	 url="http://XXX.org",
	 textVersion=paste(
			   "Matteo Fasiolo, Simon Wood.",
			   "An introduction to synlik (2014). R package version 0.1.0."
			  )	   
	 )		 

citFooter("As synlik is often updated, you may want to cite its version number. Find it with 'help(package=synlik)'.")
